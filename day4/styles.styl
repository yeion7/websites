*
  box-sizing: border-box;

a
  text-decoration: none
body
  color #5F5F5F
  font-family: sans-serif;
  letter-spacing: 2px

.header {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
}

.home {
  text-decoration: none;
  margin-left: 10px;
  font-weight: bold;
  color: #5f5f5f;
}
.nav
  width: 100%
  height: 30px
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #ccc

  & a
    text-decoration: none
    margin-left: 10px
    font-weight: bold;
    color #5f5f5f
    &:hover
      color orange

.app
  width: 100%
  min-height: 600px
  height: 100vh
  display: flex;
  justify-content: center;
  align-items: center

.title
  position: absolute;
  width: 100%
  left: 0
  text-align: center;

.work-space
  border 1px solid #ccc
  width: 600px
  height: 450px
  padding: 1em
  border-radius: 5px
  display: flex;
  justify-content: space-between;

.palete
  width: 10%
  height: 100%
  display: flex;
  flex-direction: column;

.color
  width: 100%
  height: 50px
  margin-bottom: 20px
  border: 1px solid #ccc
  padding: 2px
  border-radius: 5px
  cursor: pointer;

.box
  width: 85%
  height: 100%
  border 1px solid #ccc
  border-radius: 5px
  display: flex
  flex-direction: column;
  justify-content: center
  align-items: center

.row
  width: 100%
  height: 25%
  display: flex
  margin 5px 0px
  justify-content: space-around;

.cell
  width: 20%
  height: 90%
  border 1px solid #ccc
  border-radius: 5px
